generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Subject {
  MATH
  HISTORY
  CHEMICAL
  SPORTS
  null
}

model Teacher {
  id          String   @id  @default(uuid())
  firstName   String 
  lastName    String
  subject     Subject
  students     Student  @relation(fields: [teacherId], references: [id])
  teacherId   String   @unique
}

model Student {
  id         String    @id @default(uuid())
  fistName   String
  lastName   String
  teacher    Teacher?  
}